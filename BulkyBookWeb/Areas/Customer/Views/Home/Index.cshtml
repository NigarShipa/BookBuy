@model IEnumerable<BulkyBook.Models.Product>

<div class="row pb-3">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-md-6">
            <div class="row p-2">
                <div class="col-12 p-1" style="border: 1px solid #32cd32; border-radius: 5px;">

                    <div class="card-body">
                        <div class="card">
                            <img src="@product.ImageUrl" class="card-img-top rounded" />
                            <div class="pl-1">
                                <p class="card-title h5 text-primary">@product.Title</p>
                                <p class="card-title text-info">By :<b>@product.Author</b> </p>
                            </div>

                            <div class="pl-1">
                                <p>
                                    List Price:
                                    <del>
                                        <b>
                                            $@product.ListPrice.ToString("0.00")
                                        </b>
                                    </del>
                                </p>

                                <div class="pl-1">
                                    <p>
                                        As low as:

                                        <b>
                                            $@product.Price100.ToString("0.00")
                                        </b>

                                    </p>

                                </div>
                            </div>
                            @*Product details button in home page*@

                            <div>
                                <a asp-action="Details" class="btn btn-primary form-control" asp-route-id="@product.Id">Details</a>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    }
</div>







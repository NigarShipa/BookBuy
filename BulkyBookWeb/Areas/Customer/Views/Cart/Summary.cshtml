@model BulkyBook.Models.ViewModel.ShoppingCartVM
<form method="post">
    <br />
    <div class="container">
        <div class="card">
            <div class="card-header bg-dark text-light ml-0">
                <div class="row">
                    <div class="col-6 pt-2">
                        <i class="fa fa-shopping-cart"></i>&nbsp;
                        Order Summary
                    </div>
                    <div class="col-6 text-end">
                        <a asp-action="Index"class="btn btn-primary btn-sm">Back To Cart</a>
                    </div>
                </div>
            </div>
            @*card body section*@
            <div class="card-body">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-12">
                            <div class="row">
                                <h4 class="d-flex justify-content-between align-items-center mb-3">
                                    <span class="text-info">Shipping Details:</span>
                                </h4>
                            </div>

                            @*For feild*@
                            <div class="row my-1">
                                <div class="col-3">
                                    <label>Name</label>
                                </div>
                                @*For label input*@
                                <div class="col-9">
                                    <input asp-for="OrderHeader.Name" class="form-control" />
                                    <span asp-validation-for="OrderHeader.Name" class="text-danger"></span>
                                </div>
                            </div>

                            @*For Second field and input*@


                            <div class="row my-1">
                                <div class="col-3">
                                    <label>Phone</label>
                                </div>
                                @*For label input*@
                                <div class="col-9">
                                    <input asp-for="OrderHeader.PhoneNumber"form-control" />
                                    <span asp-validation-for="OrderHeader.PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row my-1">
                                <div class="col-3">
                                    <label>Street Address</label>
                                </div>
                                @*For label input*@
                                <div class="col-9">
                                    <input asp-for="OrderHeader.StreetAddress" class="form-control" />
                                    <span asp-validation-for="OrderHeader.StreetAddress" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row my-1">
                                <div class="col-3">
                                    <label>City</label>
                                </div>
                                @*For label input*@
                                <div class="col-9">
                                    <input asp-for="OrderHeader.City"class="form-control" />
                                    <span asp-validation-for="OrderHeader.City" class="text-danger"></span>
                                </div>
                            </div>

                           @*<div class="row my-1">
                                <div class="col-3">
                                    <label>State</label>
                                </div>
                                @*For label input
                                <div class="col-9">
                                    <input asp-for="OrderHeader.State" class="form-control" />
                                    <span asp-validation-for="OrderHeader.State" class="text-danger"></span>
                                </div>
                            </div>*@
                            <div class="row my-1">
                                <div class="col-3">
                                    <label>Postal Code</label>
                                </div>
                                @*For label input*@
                                <div class="col-9">
                                    <input asp-for="OrderHeader.PostalCode" class="form-control" />
                                    <span asp-validation-for="OrderHeader.PostalCode" class="text-danger"></span>

                                </div>
                            </div>
                        </div>
                        @*end of field*@
                        <div class="col-12">
                            <h4 class="d-flex justify-content-between align-items-center mb-3">
                                <span class="text-info">Order Summary</span>
                            </h4>
                            <ul class="list-group mb-3">
                                @foreach (var details in Model.ListCart)
                                {
                                    <li class="list-group-item d-flex justify-content-between">
                                        <div>
                                            <h6 class="my-0">@details.Product</h6>
                                            <small class="text-muted">Quantity: @details.Count</small>
                                        </div>
                                        <span class="text-muted">@((details.Price * details.Count).ToString("c"))</span>

                                    </li>
                                }


                                <li class="list-group-item d-flex justify-content-between">
                                    <div>
                                        <h6 class="my-0">Title</h6>
                                        <small class="text-info">Total(USD)</small>
                                    </div>
                                    <strong class="text-info">@Model.OrderHeader.OrderTotal.ToString("c")</Strong>
                                        
                                </li>
                            </ul>

                        </div>
                    </div>
                </div>
            </div>
            @*card footer*@
            <div class="card-footer">
                <div class=" row">
                    <div class="col-6">
                        <p class="color:maroon;font-size:14px;">
                            Estimate arrival Date:
                            @DateTime.Now.AddDays(7).ToShortDateString()-@DateTime.Now.AddDays(14).ToShortDateString()

                        </p>
                    </div>
                    <div class="col-6">
                        <button type="submit" value="Place Order" class="btn btn-primary form-control">Place Order</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form> 
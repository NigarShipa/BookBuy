@model IEnumerable<Item>

<div>
    <div class="col-6">

        <h2 class="text-primary">product List page</h2>
    </div>
    <div class="col-6">
        <a asp-controller="Item" asp-action="Create" class="btn btn-primary">Create New Product</a>

    </div>
</div>
<br></br>
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Product Name</th>
            <th scope="col">Product price</th>
            <th scope="col">Update/Delete</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var obj in Model)
        {
            <tr>
                <td>
                    @obj.Name
                </td>
                <td>
                    @obj.ProductPrice
                </td>
                <td>
                    <a asp-controller="Item" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary"><i class="bi bi-pencil-square"></i>Edit</a>
                    <a asp-controller="Item" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger"><i class="bi bi-trash3-fill"></i>Delete</a>



                </td>
            </tr>

        }



    </tbody>
</table>
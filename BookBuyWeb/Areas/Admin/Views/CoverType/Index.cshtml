@model IEnumerable<CoverType>
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row pt-3">
        <div class="col-6">
            <h2 class="text-primary">CoverType List </h2>

        </div>

        <div class="col-6 text-end">
            <a asp-controller="coverType" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle-fill"></i>
                Create new CoverType
            </a>

        </div>
    </div>
    <br>
    </br>


    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th scope="col">Cover Type Name </th>


            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="50%">
                        @obj.Name
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="CoverType" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-1">
                                <i class="bi bi-pencil-square"></i>
                                Edit
                            </a>


                            <a asp-controller="CoverType" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-1">
                                <i class="bi bi-archive-fill"></i>
                                Delete
                            </a>

                        </div>





                </tr>
            }

        </tbody>

    </table>
</div>
